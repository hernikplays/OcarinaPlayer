<Window x:Class="OcarinaPlayer.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:OcarinaPlayer"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800"
        MaxHeight="450" MaxWidth="800"
        MinHeight="450" MinWidth="800">
    <Window.Resources>
    </Window.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55"></RowDefinition>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Settings" FontSize="26" Grid.Row="0" HorizontalContentAlignment="Center"></Label>

            <Label Content="Allow Discord Rich Presence" FontSize="20" FontWeight="SemiBold" Width="280" Height="40" Margin="234,50,208,329" Grid.RowSpan="2"/>
            <CheckBox Grid.Row="1" FontSize="18" Margin="389,26,371,307"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="Primary Color" Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="SemiBold" Width="140" Height="40" Margin="119,35,137.8,289.8"></Label>
                <materialDesign:ColorPicker Grid.Row="0" Grid.Column="0" Width="300" Height="100" Margin="37,75,59.8,189.8" ></materialDesign:ColorPicker>
                <Label Content="Secondary Color" Grid.Row="0" Grid.Column="1" FontSize="20" FontWeight="SemiBold" Width="159" Height="40" Margin="126.2,35,111.6,289.8" ></Label>
                <materialDesign:ColorPicker Grid.Row="0" Grid.Column="1" Width="300" Height="100" Margin="50.2,75,46.6,189.8" ></materialDesign:ColorPicker>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
